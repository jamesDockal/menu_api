// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Menu {
  id   Int    @id @default(autoincrement())
  name String  @unique
}

model Product {
  id          Int      @id @default(autoincrement())
  price       Int
  name        String
  image       String
  description String
  categories Category[]
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String  @unique
  Product Product[]
}
